{
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "es2022",
    "target": "ES2022",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "reflection": true,
  "include": [
    "**/*.ts",
    "src/**/*.ts",
    "src/global.d.ts"
  ]
}
